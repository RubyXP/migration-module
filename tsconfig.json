{
  "version": "2.4.2",
  "compilerOptions": {
      "baseUrl": "./src",
      "lib": ["es5", "es6", "dom", "es2018"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "suppressImplicitAnyIndexErrors": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "lib",
      "strict": true,
      "allowJs": true,
      "declaration": false,
      "noImplicitAny": false,
      "resolveJsonModule" : true

  },
  "include": [
    "src/*.ts",
    "src/*.test.ts"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
